{
  "manifest_version": 3,
  "name": "GitHub Trending Link",
  "version": "1.0",
  "description": "Adds a link to GitHub Trending in the GitHub navigation bar",
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
